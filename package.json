{
  "name": "pulltorefreshjs",
  "version": "0.1.3",
  "description": "Pull To Refresh",
  "main": "dist/pulltorefresh.js",
  "scripts": {
    "dev": "tarima -des",
    "lint": "eslint src",
    "build": "tarima -f"
  },
  "author": "Rafael Soto",
  "license": "MIT",
  "tarima": {
    "src": "src",
    "public": ".",
    "dest": ".",
    "cacheFile": "dist/build.json",
    "rename": [
      "**/*.css:{filepath/1}/{filename}.css",
      "**/*.html:{filepath/1}/{filename}.html",
      "**/src/*.js:{filepath/1}/dist/{filename}.js"
    ],
    "filter": [
      "!_*",
      "!**/_*",
      "!**/_*/**"
    ],
    "ignoreFiles": [
      ".gitignore"
    ],
    "devPlugins": [
      "tarima-lr"
    ],
    "bundleOptions": {
      "extensions": {
        "js": "es6"
      },
      "rollup": {
        "format": "umd"
      }
    }
  },
  "devDependencies": {
    "buble": "0.14.2",
    "chokidar": "1.6.0",
    "eslint": "3.5.0",
    "eslint-config-airbnb-base": "7.1.0",
    "eslint-plugin-import": "1.15.0",
    "less": "2.7.1",
    "pug": "2.0.0-beta6",
    "rollup": "0.36.3",
    "tarima": "^3.5.0",
    "tarima-lr": "^0.3.2"
  }
}
